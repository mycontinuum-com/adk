  "author": "Anima Health",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mycontinuum-com/adk"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/async-retry": "^1.4.9",
    "async-retry": "^1.3.3",
    "lodash": "^4.17.21",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "@ag-ui/core": ">=0.0.40",
    "@anthropic-ai/vertex-sdk": ">=0.10.0",
    "@google/genai": ">=1.0.0",
    "openai": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "openai": {
      "optional": true
    },
    "@google/genai": {
      "optional": true
