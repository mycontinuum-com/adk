    "@types/node": "^20.0.0",
    "@types/react": "^17.0.0",
    "better-sqlite3": "^12.6.2",
    "ink": "^3.2.0",
    "ink-spinner": "^4.0.3",
    "ink-text-input": "^4.0.3",
    "jest": "^29.0.0",
    "openai": "^5.0.0",
    "react": "^17.0.0",
    "ts-jest": "^29.0.0",
    "tsup": "^8.0.0",
